<layers>
        <layer name="grid" title="Grid" >
                <style name="currentsrs" title="The grid unit is the srs of the request" abstract="The grid step is adaptive" />
                <style name="wgs84" title="The grid unit is the WGS 84 srs" abstract="The grid step is adaptive" />
<!--
                <style name="fulllabel" title="Each grid crossing is labelled" abstract="Each grid crossing is labelled" />
                <style name="fullwhite" title="Each grid crossing is labelled white" abstract="Each grid crossing is labelled, for dark and high res background" />
-->                
                <dimension name="gridstep" unit="srs unit" unitSymbol="" default="" values="" />
                <dimension name="gridlinecolor" unit="" unitSymbol="" default="rgb(51,51,51)" values="grid lines color" />
                <dimension name="gridlinewidth" unit="pixel" unitSymbol="px" default="1" values="grid lines width in pixels" />
                <dimension name="gridcrosses" unit="boolean" unitSymbol="" default="false" values="true to draw only grid lines intersection crosses" />
                <dimension name="labelfontface" unit="" unitSymbol="" default="Helvetica" values="name of the font used to draw grid labels - Arial, ..." />
                <dimension name="labelfontsize" unit="point" unitSymbol="pt" default="7" values="size of the font used to draw grid labels, in points" />
                <dimension name="labelfontstyle" unit="" unitSymbol="" default="normal" values="style of the font used to draw grid labels - one of normal,bold,italic,bold_italic" />
                <dimension name="labelfontcolor" unit="" unitSymbol="" default="rgb(204,51,51)" values="color of the font used to draw grid labels" />
                <dimension name="labelhalo" unit="boolean" unitSymbol="" default="true" values="true to draw label halo, false otherwise" />
       </layer>
        <layer name="northarrow" title="North Arrow" >
                <style name="round" title="simple black and grey arrow with a N on top" />
                <style name="arrow" title="blue and black wheel, with the 4 cardinal points indicated" />
                <dimension name="arrowxposition" unit="pixel" unitSymbol="px" default="" values="bounded by image pixel size" />
                <dimension name="arrowyposition" unit="pixel" unitSymbol="px" default="" values="bounded by image pixel size" />
                <dimension name="arrowsize" unit="pixel" unitSymbol="px" default="" values="original symbol width" />                
        </layer>
        <layer name="scalebar" title="Scale Bar" >
                <style name="km" title="kilometres or metres" abstract="depending on the scale, the units are given in kilometers or in metres" />
                <style name="miles"  title="miles or yards" abstract="depending on the scale, the units are given in miles or in yards" />
                <dimension name="scalewidth" unit="pixel" unitSymbol="px" default="auto" values="bounded by image pixel size" />
                <dimension name="scaleheight" unit="pixel" unitSymbol="px" default="auto" values="bounded by image pixel size" />
                <dimension name="scalexposition" unit="pixel" unitSymbol="px" default="auto" values="scale x position in pixels" />
                <dimension name="scaleyposition" unit="pixel" unitSymbol="px" default="auto" values="scale y position in pixels" />
                <dimension name="scaleforegroundcolor" unit="RGB" unitSymbol="" default="0xffffff" values="" />
                <dimension name="scalebackgroundcolor" unit="RGB" unitSymbol="" default="0x222222" values="" />
                <dimension name="look" unit="String" unitSymbol="" default="simple" values="simple,carto,straight" />
                <dimension name="scalelabelfontface" unit="" unitSymbol="" default="Helvetica" values="name of the font used to draw scale labels" />
                <dimension name="scalelabelfontsize" unit="point" unitSymbol="pt" default="7" values="size of the font used to draw scale labels, in points" />
                <dimension name="scalelabelfontstyle" unit="" unitSymbol="" default="normal" values="style of the font used to draw scale labels" />
        </layer>
        <layer name="border" title="Image Border" >
                <style name="thin" title="thin image border" abstract="1 pixel dark blue border" />
                <style name="thick" title="thick image border" abstract="2 pixel dark blue border" />
                <dimension name="borderwidth" unit="pixel" unitSymbol="px" default="1" values="1/50/1" />
                <dimension name="bordercolor" unit="RGB" unitSymbol="" default="0x444488" values="" />
        </layer>
</layers>

